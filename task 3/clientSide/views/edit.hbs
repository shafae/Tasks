<section class="my-5 container">
    <form method="post">
         <div class="mb-3">
            <input class="form-control" name="id" placeholder="id" value="{{result.name}}">
        </div>
        <div class="mb-3">
            <input class="form-control" name="title" placeholder="title" value="{{result.author}}">
        </div>
        <div class="mb-3">
            <input class="form-control" name="content" placeholder="content" value="{{result.department}}">
        </div>
        <div class="mb-3">
            <input type="number" class="form-control" name="dueData" placeholder="dueDate" value="{{result.pages}}">
        </div>
        <div class="mb-3">
            <button class="btn btn-primary">Edit</button>
        </div>
    </form>
</section>
